@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{ var isadmin = HttpContextAccessor.HttpContext.Session.GetString("isadmin");
                var iduser = HttpContextAccessor.HttpContext.Session.GetInt32("isuser"); }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - serviceCar</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css' rel='stylesheet'>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Users/userStyle.css" />

</head>

<body id="body-pd">


    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <nav class="float-left navbar navbar-expand-sm navbar-toggleable-sm">
            <div class=" collapse d-sm-inline ">
                <ul class="float-left navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                </ul>
            </div>
        </nav>

    </header>






    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>

                <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">BBBootstrap</span> </a>
                <div class="nav_list">
                    @if (isadmin == "True")
                    {
        <a asp-controller="Admin" asp-action="DisplayCon" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Conductors</span>
        </a> }
                    else
                    {

        <a asp-controller="Conductor" asp-action="Profil" asp-router-id="@iduser" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">My Profil</span>
        </a>}

                    @if (isadmin == "True")
                    {
        <a asp-controller="Vehicle" asp-action="Index" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Vehicle</span>
        </a> }
                    else
                    {

        <a asp-controller="Vehicle" asp-action="Details" asp-router-id="@iduser" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">My Vehicle</span>
        </a>}


                    @if (isadmin == "True")
                    {
        <a asp-controller="VehicleBc" asp-action="Index" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Buy Contracts</span>
        </a> }
                    else
                    {

        <a asp-controller="VehicleAccident" asp-action="Details" asp-router-id="@iduser" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Accidents</span>
        </a>}

                    @if (isadmin == "True")
                    {
        <a asp-controller="VehicleAccident" asp-action="Index" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Accidents</span>
        </a> }
                    else
                    {

        <a asp-controller="VehicleFuel" asp-action="Details" asp-router-id="@iduser" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Vehicle Fuel</span>
        </a>}


                    @if (isadmin == "True")
                    {
        <a asp-controller="VehicleMp" asp-action="Index" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Maintenance plan</span>
        </a> }
                    else
                    {

        <a asp-controller="VehicleMp" asp-action="Details" asp-router-id="@iduser" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Maintenance Plan</span>
        </a>}
                    @if (isadmin == "True")
                    {
        <a asp-controller="VehicleReparation" asp-action="Index" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Reparation</span>
        </a> }
                    else
                    {

        <a asp-controller="VehicleReparation" asp-action="Details" asp-router-id="@iduser" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Reparation</span>
        </a>}

                    @if (isadmin == "True")
                    {
        <a asp-controller="VehicleFuel" asp-action="Index" class="nav_link active">
            <i class='bx bx-grid-alt nav_icon'></i>
            <span class="nav_name">Fuel spending</span>
        </a>}
                    else
                    {


                    }

                    <a asp-controller="Home" asp-action="Logout" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span> </a>

                </div>
            </div>
        </nav>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />

    <script src='~/js/Users/user.js'></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
